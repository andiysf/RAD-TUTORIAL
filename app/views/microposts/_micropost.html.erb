<li id="micropost-<%= micropost.id %>">
    <div class = "post">
    <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
    <p class="title"><b><%= micropost.title %></b></p>
    <p>
    <%= link_to micropost.user.name, micropost.user %> &emsp; <%= time_ago_in_words(micropost.created_at) %> ago &emsp; <%= micropost.topic %> &emsp; view: <%= micropost.view %>
    </p>
    </div>
</li>